<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Unbounded&display=swap" rel="stylesheet">
    <title>Seacom Libary | <%- title %></title>
    <link rel="stylesheet" href="styles/details.css">
    <link rel="stylesheet" href="styles/default_navbar.css">
    <link rel="stylesheet" href="styles/footer.css">
</head>

<body>
    <%- include("./partials/"+ navigation_bar, {profile_photo}) %>
    <section class="book_section">
        <div class="container">
            <div class="book">
                <div class="image"></div>
                <div class="details">
                    <p class="book_name">Pyton-Black book</p>
                    <p class="author_name">Ema Jon</p>
                </div>
            </div>
            <div class="book-info">
                <h1>Book details</h1>
                <div class="info">
                    <div class="name">
                        <label>name</label>
                        <p>Python-Black book</p>
                    </div>
                    <div class="author">
                        <label>author</label>
                        <p>Ema Jon</p>
                    </div>
                    <div class="publish_time">
                        <label>published on</label>
                        <p>2023</p>
                    </div>
                    <div class="rent_time">
                        <label>max rent time</label>
                        <p>10 day</p>
                    </div>
                </div>
                <p class="stock">in stock</p>
                <div class="cart_btns">
                    <a href="#">Add to cart</a>
                    <a href="#">Rent</a>
                </div>
            </div>
        </div>
    </section>
    <%- include("./partials/footer") %>
    <script src="https://kit.fontawesome.com/c485021909.js" crossorigin="anonymous"></script>
    <script>
        const hambar = document.querySelector(".nav i")
        const navbar = document.querySelector(".nav")
        hambar.addEventListener("click", () => {
            navbar.classList.toggle("active")
        })
        
        const quentity = document.querySelector(".container .book-info .quentity p span")
        const select = document.querySelector(".container .book-info .quentity select")

        select.addEventListener("change", ()=>{
            quentity.innerHTML = select.value
        })

    </script>
</body>